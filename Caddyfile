	email your-email@example.com
}

# Replace with your domain for production, or use localhost for local dev
localhost {
	# Serve uploaded files directly from the /public/uploads directory
	handle_path /uploads/* {
		root * /public
		file_server
	}

	# Proxy all other requests to the Next.js app
	reverse_proxy app:3000
}